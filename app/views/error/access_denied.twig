{% extends 'error/layout.twig' %}

{% block title %}{{ 'Access denied'|trans() }}{% endblock %}

{% block content %}
    {% if app.config.get('is_chat_open') %}
        <div class="alert alert-info">
            <h1>{{ 'Access denied'|trans() }}</h1>
            <a class="button primary" href="{{ url('login') }}">{{ 'Login'|trans() }}</a>
        </div>
    {% else %}
        <div class="alert alert-info">
            <h1>{{ 'Chat is closed'|trans() }}</h1>
        </div>
    {% endif %}
{% endblock %}