{% extends 'profile/layout.twig' %}

{% block style %}
    {{ parent() }}
    <style type="text/css">
        .avatar {
            width: 100px;
            height: 100px;
        }
    </style>
{% endblock %}

{% block content %}
    <form class="form" action="{{ url('profile_avatar') }}" {{ form_enctype(form) }} method="post">
        {{ form_widget(form._token) }}
        <div class="row">
            <div class="col-md-2">
                <img class="avatar" src="{{ app.user.avatar }}">
            </div>
            <div class="col-md-10">
                <h4>{{ 'New avatar'|trans() }}</h4>
                {{ form_widget(form.file) }}
                <br>
                <button class="btn btn-success" type="submit">{{ 'Upload'|trans() }}</button>
                {{ form_errors(form.file) }}
            </div>
        </div>
    </form>
{% endblock %}
