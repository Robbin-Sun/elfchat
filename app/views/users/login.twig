{% extends 'users/layout.twig' %}

{% block content %}
    <form class="form" action="{{ path('login') }}" method="post">
        {{ form_widget(form._token) }}
        <h1>{{ 'Login'|trans() }}</h1>


        {% if error is not empty %}
            <div class="alert alert-danger">
                {{ error|trans({}) }}
            </div>
        {% endif %}

        <div>
            <label for="username">{{ 'Name'|trans({}) }}</label>
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div>
            <label for="password">{{ 'Password'|trans() }}</label>
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div>
            <label>
                {{ form_widget(form.remember_me) }}
                {{ 'Remember me'|trans() }}
            </label>
        </div>

        <button class="primary" type="submit">{{ 'Login'|trans() }}</button>
        <a href="{{ url('register') }}" class="button">{{ 'Register'|trans() }}</a>
    </form>

    <form class="form" action="{{ path('login') }}" method="post">
        {{ form_widget(guestForm._token) }}

        <h1>{{ 'Guest'|trans() }}</h1>

        <div class="form-group">
            <label for="guestname">{{ 'Name'|trans({}) }}</label>
            {{ form_widget(guestForm.guestname, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(guestForm.guestname) }}
        </div>

        <button class="primary" type="submit">{{ 'Login'|trans() }}</button>
    </form>
{% endblock %}