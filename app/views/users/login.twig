{% extends 'users/layout.twig' %}

{% block content %}
    <form class="form" action="{{ path('login_check') }}" method="POST">
        <h1>{{ 'Login'|trans() }}</h1>
        {% if error is not empty %}
            <div class="alert alert-danger">
                {{ error|trans({}, 'security') }}
            </div>
        {% endif %}

        <div class="form-group">
            <label for="_username">{{ 'Name'|trans({}, 'users') }}</label>
            <input type="text" class="form-control" name="_username" value="{{ last_username }}">
        </div>

        <div class="form-group">
            <label for="_password">{{ 'Password'|trans() }}</label>
            <input type="password" class="form-control" name="_password">
        </div>

        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" checked="checked">
                {{ 'Remember me'|trans() }}
            </label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">{{ 'Login'|trans() }}</button>
        <a href="{{ url('register') }}" class="btn btn-lg btn-default">{{ 'Register'|trans() }}</a>
    </form>
{% endblock %}