{% extends 'admin/layout.twig' %}

{% block content %}
    <h1>{{ 'Users'|trans() }}</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th width="20px"><i class="glyphicon glyphicon-ok"></i></th>
            <th>{{ 'ID'|trans() }}</th>
            <th>{{ 'Name'|trans() }}</th>
            <th>{{ 'Email'|trans() }}</th>
            <th>{{ 'Role'|trans() }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><input type="checkbox" name="user-{{ user.id }}"></td>
                <td>{{ user.id }}</td>
                <td>
                    <img src="{{ user.avatar }}" style="max-width: 40px;">
                    <span>{{ user.name }}</span>
                </td>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td>
                    <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn">
                        <i class="glyphicon glyphicon-edit"></i>
                        {{ 'Edit'|trans() }}
                    </a>
                    <a href="{{ path('admin_users_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm">
                        <i class="glyphicon glyphicon-remove"></i>
                        {{ 'Delete'|trans() }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}