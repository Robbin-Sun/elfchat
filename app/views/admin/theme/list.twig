{% extends 'admin/layout.twig' %}

{% block title %}{{ 'Themes'|trans() }}{% endblock %}

{% block content %}
    {% for theme in themes %}
        <h1>{{ theme.title }}</h1>
        <p>
            <strong>{{ 'Author'|trans() }}</strong>: {{ theme.author.name }}<br>
            <strong>{{ 'Email'|trans() }}</strong>: {{ theme.author.email }}<br>
        </p>
        {% if theme.checkRequirements() %}
            {% if theme.installed %}
                {% if theme.hasConfigurationRoute() %}
                    <a class="button" href="{{ url(theme.configurationRoute) }}">{{ 'Configuration'|trans() }}</a>
                {% endif %}
            {% else %}
                <a class="button primary" href="{{ url('admin_theme_install', {'name': theme.name}) }}">
                    {{ 'Install theme'|trans() }}
                </a>
            {% endif %}
        {% else %}
            <strong>{{ 'Can not install this theme, as it does not match chat requirements.'|trans() }}</strong>
        {% endif %}
    {% endfor %}
{% endblock %}