<div class="tab user" id="user-[user.id]">
    [#user.avatar]
    <img class="avatar" data-user-id="[user.id]" src="[user.avatar]">
    [/user.avatar]

    [^user.avatar]
    <span class="avatar" data-user-id="[user.id]"></span>
    [/user.avatar]

    <span class="name" data-user-name="[user.name]">[user.name]</span>
</div>