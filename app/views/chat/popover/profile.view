{% trans_default_domain 'chat' %}

<div id="[id]" class="popover right profile" style="top: 0; left: 0; display: none;">
    <div class="arrow"></div>
    <h3 class="popover-title">
        [user.name]
    </h3>
    <div class="popover-side">
        <div class="avatar" style="background-image: url('[user.avatar]')"></div>
        {% if app.isModerator() %}
            <a class="button" href="{{ url('moderator_add_ban') }}?id=[user.id]" target="_blank">{{ 'Bun'|trans() }}</a>
        {% endif %}
    </div>
    <div class="popover-content">
        <div class="group">User</div>
        <div class="sex">Male</div>
        <div class="ip">154.32.23.12</div>
    </div>
</div>