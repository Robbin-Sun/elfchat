<div id="settings" class="popover left" style="top: 0; left: 0; display: none;">
    <div class="arrow"></div>
    <h3 class="popover-title">
        {{ 'Settings'|trans() }}
    </h3>
    <ul class="menu">
        <li><a id="avatarButton" target="_blank" href={{ url('profile_avatar') }}>{{ 'Avatar'|trans() }}</a></li>
        {% if app.isAdmin() %}
            <li><a target="_blank" href={{ url('admin') }}>{{ 'Admin Center'|trans() }}</a></li>
        {% endif %}
        <li class="divider"></li>
        <li><a href={{ url('logout') }}>{{ 'Logout'|trans() }}</a></li>
    </ul>
</div>