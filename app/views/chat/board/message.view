<div class="message" id="message-[id]">
    [#user.avatar]
    <span class="avatar"  data-user-id="[user.id]" data-popover="user-popover-[user.id]" style="background-image: url('[user.avatar]')"></span>
    [/user.avatar]
    <span class="time">
        [time]
    </span>
    <span class="user">
        <span class="name" data-name="[user.name.plain]">[&user.name]</span>:&nbsp;
    </span>
    <span class="text">[&text]</span>
</div>