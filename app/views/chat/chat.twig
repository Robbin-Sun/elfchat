{% extends 'base.twig' %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/chat.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('icons/css/icons.css') }}">
    {% if app.config.get('mobile_enable') %}
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
        <link rel="stylesheet" type="text/css" media="only screen and (min-device-width: 320px) and (max-device-width: 480px)" href="{{ asset('css/mobile.css') }}">
    {% endif %}
{% endblock style %}

{% block body %}
    <div class="box">
        <header>
            <button class="show-users-button" data-action="users"><i class="icon-menu"></i></button>
            ElfChat
            <div class="buttons">
                <!--<a class="button" target="_blank" href="#">{{ 'Archive'|trans() }}</a>-->
                <button data-popover="settings"><i class="icon-config"></i> {{ 'Settings'|trans() }}</button>
            </div>
        </header>

        <aside id="users">
        </aside>

        <div class="chat" id="chat"></div>

        <footer>
            <div class="buttons">
                <div class="other">
                    <button data-popover="emotions"><i class="icon-emotion"></i> {{ 'Emotions'|trans() }}</button>
                    <button data-popover="bbcode">{{ 'BBCode'|trans() }}</button>
                </div>
                <div class="send">
                    <div id="privateGroup" class="button-group" style="display: none">
                        <button id="private" data-action="send"></button><button data-action="close">âœ˜</button>
                    </div>
                    <button id="send" class="primary" data-action="send"><i class="icon-send"></i> {{ 'Send'|trans() }}</button>
                </div>
            </div>

            <textarea id="message" tabindex="1"></textarea>
        </footer>
    </div>

    <div class="copyright">
        &copy; 2014 <a href="http://elfchat.net" target="_blank">ElfChat</a> {{ app.version }}
    </div>
{% endblock body %}

{% block script %}
    {{ parent() }}
    {% include 'chat/script.twig' %}
{% endblock script %}